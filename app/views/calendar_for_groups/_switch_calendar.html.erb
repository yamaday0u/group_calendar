<%# Month Calendar (Default) %>
<div id="month_calendar">
  <%= month_calendar events:@group_calendars do |date, calendars| %>
    <%= date.day %>
    <%= render partial: "calendars/contents", locals: {calendars: calendars} %>
  <% end %>
</div>

<%# Week Calendar %>
<div id="week_calendar">
  <%= week_calendar events:@group_calendars do |date, calendars| %>
    <%= date.day %>
    <%= render partial: "calendars/contents", locals: {calendars: calendars} %>
  <% end %>
</div>

<%# Custom Calendar %>
<div id="custom_calendar">
  <%= calendar events:@group_calendars do |date, calendars| %>
    <%= date.day %>
    <%= render partial: "calendars/contents", locals: {calendars: calendars} %>
  <% end %>
</div>

<div class="switch-calendar-wrap">
  <p>switch calendar</p>
  <div class="calendars">
    <%= radio_button_tag "calendar", "month", checked: true%>
    <%= label "calendar", "month" %>
    <%= radio_button_tag "calendar", "week" %>
    <%= label "calendar", "week" %>
    <%= radio_button_tag "calendar", "custom" %>
    <%= label "calendar", "custom" %>
  </div>
</div>