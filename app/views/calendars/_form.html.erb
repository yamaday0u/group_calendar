<div class="form-wrap">
  <div class="form-group">
    <div class="form-label"><%= f.label :title %></div>
    <div class="form-content"><%= f.text_area :title, autofocus: true, cols:40, rows:1 %></div>
  </div>

  <div class="form-group">
    <div class="form-label"><%= f.label :content %></div>
    <div class="form-content"><%= f.text_area :content, cols:40, rows:10 %></div>
  </div>

  <div class="form-group">
    <div class="form-label"><%= f.label :start_time %></div>
    <div class="form-content"><%= f.datetime_select :start_time, minute_step:5 %></div>
  </div>

  <div class="form-group">
    <div class="form-label"><%= f.label :end_time %></div>
    <div class="form-content"><%= f.datetime_select :end_time, minute_step:5 %></div>
  </div>
</div>