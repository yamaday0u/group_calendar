<div class="form-wrap">
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_area :title, autofocus: true, cols:40, rows:1 %>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content, cols:40, rows:10 %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time, minute_step:5 %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time, minute_step:5 %>
  </div>

  <div class="actions">
    <% if current_page?(new_calendar_path) %>
      <%= f.submit 'Create new schejule', class:"sign-up-btn" %>
    <% elsif current_page?(edit_calendar_path) %>
      <%= f.submit 'Update new schejule', class:"sign-up-btn" %>
    <% end %>
  </div>
</div>