<%# Month Calendar (Default) %>
<div id="month_calendar">
  <%= month_calendar events:@calendars do |date, calendars| %>
    <%= date.day %>
    <%= render partial: "calendars/contents", locals: {calendars: calendars} %>
  <% end %>
</div>

