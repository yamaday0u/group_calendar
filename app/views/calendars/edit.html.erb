<%= render "shared/header" %>

<div class="content">
  <div class="flex-parent-wrap">
    <div class="main">
    
      <%= form_with model:@calendar, local:true do |f| %>
        <%= render "shared/error_messages", model: f.object %>

        <div class="form-wrap">
          <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_area :title, autofocus: true, cols:40, rows:1 %>
          </div>

          <div class="form-group">
            <%= f.label :content %><br>
            <%= f.text_area :content, cols:40, rows:10 %>
          </div>

          <div class="form-group">
            <%= f.label :start_time %><br>
            <%= f.datetime_select :start_time, minute_step:5 %>
          </div>

          <div class="form-group">
            <%= f.label :end_time %><br>
            <%= f.datetime_select :end_time, minute_step:5 %>
          </div>

          <div class="actions">
            <%= f.submit 'Update schejule', class:"sign-up-btn" %>
          </div>
        </div>
      <% end %>

      <div class="back-btn-wrap">
        <%= link_to 'Back to Top page', calendars_path, class:"back-btn" %>
      </div>
    </div><%# end of main %>

    <%= render "shared/nav-bar-tab" %>
  </div><%# end of flex-parent-wrap %>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>