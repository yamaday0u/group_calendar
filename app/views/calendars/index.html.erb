<%= render "shared/header" %>

<div class="content">

  <div class="my-page">
    <div class="calendar">
      <%= month_calendar events:@calendars do |date, calendars| %>
        <%= date.day %>

        <% calendars.each do |calendar| %>
          <div class="schejule">
            <%= link_to calendar.title, calendar_path(calendar.id) %>
          </div>
        <% end %>
      <% end %>
    </div>
    
    <%= render "shared/nav-bar-tab" %>
  </div>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>