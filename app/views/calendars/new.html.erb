<%= render "shared/header" %>

<div class="content">
  <%= form_with model:@calendar do |f| %>
    <div class="form-wrap">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content %>
      </div>

      <div class="form-group">
        <%= f.label :start_time %>
        <%= f.datetime_select :start_time %>
      </div>

      <div class="form-group">
        <%= f.label :end_time %>
        <%= f.datetime_select :end_time %>
      </div>

      <div class="actions">
        <%= f.submit 'Create new schejule', class:"sign-up-btn" %>
      </div>

    </div>

  <% end %>

  <div class="back-btn-wrap">
    <%= link_to 'Back to Top page', calendars_path, class:"back-btn" %>
  </div>

</div>

<%= render "shared/footer" %>
