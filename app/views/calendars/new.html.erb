<%= render "shared/header" %>

<div class="content">
  <%= form_with model:@calendar, local:true do |f| %>
    <div class="form-wrap">
      <div class="form-group">
        <%= f.label :title %><br class="br-sp">
        <%= f.text_area :title, cols:40, rows:1 %>
      </div>

      <div class="form-group">
        <%= f.label :content %><br class="br-sp">
        <%= f.text_area :content, cols:40, rows:10 %>
      </div>

      <div class="form-group">
        <%= f.label :start_time %><br class="br-sp">
        <%= f.datetime_select :start_time %>
      </div>

      <div class="form-group">
        <%= f.label :end_time %><br class="br-sp">
        <%= f.datetime_select :end_time %>
      </div>

      <div class="actions">
        <%= f.submit 'Create new schejule', class:"sign-up-btn" %>
      </div>

    </div>

  <% end %>

  <div class="back-btn-wrap">
    <%= link_to 'Back to Top page', calendars_path, class:"back-btn" %>
  </div>

</div>

<%= render "shared/footer" %>
