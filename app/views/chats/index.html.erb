<%= render "shared/header" %>

<div class="content">

  <div class="flex-parent-wrap">
    <div class="main">

      <%= form_with model: @chat, url: group_chats_path(params[:group_id]) do |f| %>
        <%= f.text_area :text %>
        <%= f.submit 'submit' %>
      <% end %>

      <div id="chats">
        <% @chats.each do |chat| %>
        <div class="chat">
          <p><%= chat.text %></p>
        </div>
        <% end %>
      </div>
      
    </div><%# End of main %>
    
      <%= render "shared/nav-bar-tab" %>
  </div><%# End of flex-parent-warp %>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>