<%= render "shared/header" %>

<div class="content">
  <h2 class="subtitle">Log in</h2>

  <%= form_with model: @user, url: user_session_path, class: "", local: true do |f| %>
  <div class="form-wrap">
      <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "sign-up-btn" %>
    </div>
  </div><%# End of "form-wrap" %>
  <% end %>


  <div class="back-btn-wrap">
    <%= link_to 'Back to Top page', root_path, class:"back-btn" %>
  </div>
</div>

