<div class="form-wrap">
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_area :name, autofocus: true, cols:40, rows:1 %>
  </div>

  <div class="form-group">
    <%= f.label :outline %><br>
    <%= f.text_area :outline, cols:40, rows:10 %>
  </div>

  <div class="form-group">
    <%= f.label :task %><br>
    <%= f.text_area :task, cols:40, rows:10 %>
  </div>

  <div class="actions">
    <% if current_page?(new_group_path) %>
      <%= f.submit 'Create new group', class:"sign-up-btn" %>
    <%# elsif current_page?(edit_calendar_path) %>
      <%#= f.submit 'Update new schejule', class:"sign-up-btn" %>
    <% end %>
  </div>
</div>