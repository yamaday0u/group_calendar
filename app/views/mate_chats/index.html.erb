<%= render "shared/header" %>

<div class="content">
  <div class="flex__parent__wrap">
    <div class="main">

    <div class="list">
        <p class="bold">Chat room with <%= @room_mate.name %></p>
    </div>

      <%= form_with model: @mate_chat, url: room_mate_chats_path(params[:room_id]) do |f| %>
        <%= render partial: "shared/chat_form", locals: {f: f} %>
      <% end %>
      <%= render "shared/back_button_to_chats" %>

      <div id="chats">
        <% @mate_chats.each do |chat| %>
          <%= render partial: "shared/chats", locals: {chat: chat} %>
        <% end %>
        <%= paginate @mate_chats %>
      </div>
      
    </div><%# End of main %>
    
    <%= render "shared/nav-bar-tab" %>
  </div><%# End of flex-parent-warp %>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>