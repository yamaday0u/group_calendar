<%= render "shared/header" %>

<div class="content">
  <div class="flex__parent__wrap">
    <div class="main">

      <%= form_with model:@news, local:true do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <%= render partial: "news/form", locals: {f: f} %>

        <div class="actions">
          <%= f.submit 'Update news', class:"sign-up-btn" %>
        </div>
      <% end %>

      <div class="actions">
        <%= link_to 'Delete news', news_path(@news.id), method: :delete, data: { confirm: 'Are you sure to delete a news?'}, class:"sign-up-btn caution" %>
      </div>

      <%= render "shared/back_button" %>
    </div><%# end of main %>

    <%= render "shared/nav-bar-tab" %>
  </div><%# end of flex-parent-wrap %>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>