<%= render "shared/header" %>

<div class="content">

  <div class="flex-parent-wrap">
    <div class="main">

      <div class="create-group">
        <div class="actions">
          <%= link_to "Explore mate", 'home/new', class: "sign-up-btn" %>
        </div>
        <%= render "shared/back_button" %>
      </div>

      <div class="item-list">
      
        <div class="item-list-header">
          <p class="bold">Mate list</p>
        </div>

        <div class="item-list-content">
          <ul>
            <% @mates.each do |user| %>
              <% unless current_user.id == user.id %>
                <div class="each-item">
                  <li>
                    <div class="each-item-content">

                      <div class="item-content-left">
                        <% if user.user_image.present? %>
                          <%= image_tag user.user_image, class: "image" %>
                        <% else %>
                          <p>Mate<br>Image</p>
                        <% end %>
                      </div>

                      <div class="item-content-right">
                        <p><%= link_to user.name, user_path(user.id) %></p>
                        <p><%= user.identity %></p>
                      </div>
                    </div>

                  </li>
                </div>
              <% end %>
            <% end %>
          </ul>
        </div>

        <div class="item-list-header">
          <p class="bold">User list</p>
        </div>

        <div class="item-list-content">
          <ul>
            <% @users.each do |user| %>
              <% unless current_user.id == user.id %>
                <div class="each-item">
                  <li>
                    <div class="each-item-content">

                      <div class="item-content-left">
                        <% if user.user_image.present? %>
                          <%= image_tag user.user_image, class: "image" %>
                        <% else %>
                          <p>User<br>Image</p>
                        <% end %>
                      </div>

                      <div class="item-content-right">
                        <p><%= link_to user.name, user_path(user.id) %></p>
                        <p><%= user.identity %></p>
                        <% if user.follow_request?(current_user, user) %>
                          <p><i class="fas fa-star"></i></p>
                        <% end %>
                      </div>
                    </div>

                  </li>
                </div>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>

    </div><%# end of main %>
    
      <%= render "shared/nav-bar-tab" %>
  </div>
</div>

<%= render "shared/nav-bar" %>
<%= render "shared/footer" %>